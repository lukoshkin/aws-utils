user: ubuntu
workdir: '~/some/folder'

## NOTE: the newline is essential after "cfg-blocks" (ending with :-)
instance_opts:-
instance_id|sshkey|user|workdir|entrypoint
i-0a1b23c45678d9e0f|~/.ssh/key1.pem|ubuntu|'~'|':'
i-0b1c23d45678e9f0g|~/.ssh/key2.pem|ubuntu|'~'|':'

## Default choice among multiple instances available
instance_id: i-0a1b23c45678d9e0f
sshkey: ~/.ssh/key.pem

overwrite_in_tmp: false
idle_on_first_login: 6
scp_default_dst: /tmp
